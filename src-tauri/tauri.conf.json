{
  "build": {
    "distDir": "./assets"
  },
  "package": {
    "productName": "Notion",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "systemTray":{
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "title": "Notion"
    },
    "windows": [
      {
        "title": "Notion",
        "width": 800,
        "height": 600,
        "url": "https://www.notion.so/signup",
        "maximized": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.notion-linux-desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
